# Automatically detect and normalize all text files (convert CRLF to LF; end-of-line conversion)
*                    text=auto

# Normalize markdown (text) files (convert CRLF to LF)
*.md                 text
*.mdown              text
*.markdown           text

# Images should be treated as binary (don't apply end-of-line conversions)
*.png                binary
*.jpg                binary

# Exclude files from export (when using 'git archive' or Tower 'export')

# Git
.gitignore           export-ignore
.gitattributes       export-ignore
.gitmodules          export-ignore

# Grunt
gruntfile.js         export-ignore
package.json         export-ignore
grunt/               export-ignore
node_modules/        export-ignore

# Editor
.editorconfig        export-ignore

# Linters
.eslintrc            export-ignore
.jshintrc            export-ignore

# Readme (text files)
# readme.txt           export-ignore
# readme.html          export-ignore
# readme.md            export-ignore
# readme.mdown         export-ignore
# readme.markdown      export-ignore

# Apache (ignore with nginx)
# .htaccess            export-ignore

# Folders
design/              export-ignore
# content/             export-ignore

# JavaScript files and folders
assets/javascript/main/			export-ignore
assets/javascript/lib/			export-ignore
assets/javascript/modules/		export-ignore

# Stylesheet files and folders
assets/stylesheets/scss/		export-ignore
